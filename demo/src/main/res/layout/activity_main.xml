<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Debugger threads with command:"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="adb logcat | grep drawUpEachThreadDiffSize\nadb logcat | grep drawUpEachThreadDiffInfo\nadb logcat | grep drawUpEachThreadDiffInfo\nadb logcat | grep drawUpEachThreadInfo\nadb logcat | grep drawUpUnknowInfo"
            android:textSize="12sp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/random_thread_work_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_random_thread_loop"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/add_task_to_io_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add task to the io-thread-pool"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/add_task_to_computation_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add task to the computation-thread-pool"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/add_task_to_network_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add task to the network-thread-pool"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/add_task_to_test1_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add task to the test1-thread-pool"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/add_task_to_test2_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add task to the test2-thread-pool"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/add_task_to_test3_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add task to the test3-thread-pool"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/add_task_to_test4_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add task to the test4-thread-pool"/>
    </LinearLayout>
</ScrollView>